<!-- PAGE | CONTACT -->
<div class="pages black-bg white page-contact" id="rush-application">
    <div class="container">
        <!-- Header -->
        <header>
            <h1>Rush Application</h1>
            <h4 class="line-divider"></h4>
            <div class="row">
                <div class="span8 offset2">
                    <p>
                        If you're interested in joining our Zeta class, please fill out the application below.
                    </p>

                    <p>
                        <u>DISCLAIMER:</u> Mandatory meetings will be held weekly on either Thursdays or Tuesdays at 8pm. We emphasize attendance as a key part of pledging; please note in advance that we expect you to commit to one of those two days.
                    </p> </br>

                    <p> If you have any questions or concerns please contact <%= mail_to "rushsigmaetapi@gmail.com", "Sherry Chen" %>. </p>

                    <p> <strong> Application due on Saturday, February 8th by 9:00am </strong> </p>

                </div>

            </div>
        </header>
        <!-- End Header -->

        <!-- Start Article -->
        <article>
            <div class="row-fluid">
                <!-- Contact form -->
                <div class="hero-unit">
                    <h4> Zeta Class Application </h4>
                    <div class="accordion" id="accordion2">
                    <%= simple_form_for(:application,
                        :remote => true,
                        :url => url_for(:action => "create", :controller => "rush_applications"),
                        :method => :post) do |f| %>
                      <div class="accordion-group">
                        <div class="accordion-heading">
                          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
                            Personal Information
                          </a>
                        </div>
                        <div id="collapseOne" class="accordion-body collapse in">
                          <div class="accordion-inner">
                            <%= f.input :name %>
                            <%= f.input :email %>
                            <%= f.input :phone_number %>
                            <%= f.input :year %>
                            <%= f.input :major %>
                          </div>
                        </div>
                      </div>
                      <div class="accordion-group">
                        <div class="accordion-heading">
                          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
                            Extracurricular Information
                          </a>
                        </div>
                        <div id="collapseTwo" class="accordion-body collapse">
                          <div class="accordion-inner">
                            <%= f.input :extracurriculars,  as: :text, label: "1. What are your other commitments this semester? (List your classes, work and other extracurriculars along with the number of hours of commitment.)"  %>
                            <%= f.input :hobbies, as: :text, label: "2. What are your hobbies? (100 words or less)" %>
                            <%= f.input :why_sep, as: :text, label: "3. Why do you want to be a part of SEP and what do you hope to accomplish during your time as a brother? (200 words or less)" %>
                          </div>
                        </div>
                      </div>
                      <div class="accordion-group">
                        <div class="accordion-heading">
                          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree">
                            Short Answer
                          </a>
                        </div>
                        <div id="collapseThree" class="accordion-body collapse">
                          <div class="accordion-inner">
                            <p> Please answer any two of the prompts below. (200 words or less each) </p>
                            <%= f.input :short_answer1, required: false, as: :text, label: "1. What is your passion, and how does your passion drive you?" %>
                            <%= f.input :short_answer2, required: false, as: :text, label: "2. Identify one problem or inefficiency that can successfully be addressed by entrepreneurial action. Specify actionable items that can be applied to the situation. There is no need to constrain yourself to business-related industries — choose a topic in which you have authentic passion." %>
                            <%= f.input :short_answer3, required: false, as: :text, label: "3. Identify a startup that inspires you. Analyze their business model and target market." %>
                            <%= f.input :short_answer4, required: false, as: :text, label: "4. If you had to create a startup in any country other than the United States, which would it be and why?" %>
                          </div>
                        </div>
                      </div>
                      <div class="accordion-group">
                        <div class="accordion-heading">
                          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseFour">
                            Additional Information
                          </a>
                        </div>
                        <div id="collapseFour" class="accordion-body collapse">
                          <div class="accordion-inner">
                            <%= f.input :picture, as: :file, label: "Please upload a picture of yourself, to help us identify you." %>
                            <%= f.input :resume, as: :file, label: "Please upload your updated resume." %>
                            <%= f.input :reference, :as => :select, label: "How did you hear about us?" do
                                f.select :reference, [['Classroom Announcement', 'classroom_announcement'], ['Flyer', 'flyer'], ['Table on Sproul', 'table'], ['Classroom Chalking', 'chalking'], ['Friend', 'friend'], ['Other', 'other']]
                            end %>
                            <div class="alert alert-danger"> Please verify your application is fully completed, and try again. </div>
                            <%= f.button :submit, 'Submit' %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                    </div>
                </div>
                <!-- End Contact form -->
            </div>
        </article>
        <!-- End Article -->

    </div>
</div>
